{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "main": "src/api/server/index.js",
  "scripts": {
    "start": "node src/api/server/index.js",
    "dev": "nodemon --trace-deprecation src/api/server/index.js",
    "migrate": "node --trace-deprecation src/migrations/migrate.js",
    "lint": "eslint $PWD/'./src/**/*.js' --fix",
    "format": "prettier-eslint $PWD/'./src/**/*.{js,json}' --write"
  },
  "type": "module",
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier-eslint-cli": "^5.0.0"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^20.0.3",
    "@hapi/inert": "^6.0.3",
    "@hapi/joi": "^17.1.0",
    "@hapi/vision": "^6.0.1",
    "axios": "^0.19.2",
    "chalk": "^2.4.2",
    "cookie-parser": "~1.4.4",
    "dotenv": "^8.1.0",
    "hapi-auth-bearer-token": "^6.1.4",
    "hapi-swagger": "^12.1.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.24.0",
    "mysql2": "^2.1.0",
    "nodemon": "^1.19.1",
    "query-string": "^6.13.2",
    "sequelize": "^5.21.5",
    "serve-favicon": "^2.5.0"
  }
}
